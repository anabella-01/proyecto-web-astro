---
import Button from "../components/Button.astro"
import {Image} from 'astro:assets';
import heroImage from "../assets/images/hero.svg"
---

<section class="py-14 px-0">
    <div class="container flex flex-wrap items-center gap-[30px] md:flex-nowrap">
        <div class="left">
            <h1 class="max-w[405px] mb-5 md:text-[40px]"> 
                A digital agency specializing on <span>mobile design</span>
            </h1>
            <p class="text-[22px] leading[34px] mb-[30px] mb:text-[18px]">
                We are an award winning design agency that strongly believes in the power of creative ideas.
            </p>
            <Button content= "Get Started" href= "/get-started"/>
        </div>
        <div class="right">
            <Image src= {heroImage} alt="Hero" loading="eager"/>
        </div>
    </div>
 </section>